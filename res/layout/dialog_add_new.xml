<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center|right"
    android:background="@drawable/paperbg2"
    android:gravity="right|top"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/button_AddNewPrompt_delete"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:layout_marginRight="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:background="@drawable/button_selector"
        android:scaleType="fitCenter"
        android:src="@drawable/deletebutton" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/text_listTabCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name:" />

    <EditText
        android:id="@+id/newItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/text_shoppingListCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unit of Measure:" />

    <EditText
        android:id="@+id/newUnitOfMeasure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10" />

    <TextView
        android:id="@+id/text_buyPromptUOM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QOH:" />

    <EditText
        android:id="@+id/newQOH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="numberDecimal" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/textView_historyChangeType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low Level:" />

    <EditText
        android:id="@+id/newLowLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferred Stock:" />

    <EditText
        android:id="@+id/newPreferredStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="numberDecimal" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="right" >

    <ImageButton
        android:id="@+id/AddNewButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:background="@drawable/button_selector"
        android:scaleType="fitCenter"
        android:src="@drawable/okbutton" />

    <ImageButton
        android:id="@+id/CancleButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:background="@drawable/button_selector"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/nobutton" />

</LinearLayout>
 
</LinearLayout>
